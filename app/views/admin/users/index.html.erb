<h2> ユーザー管理 </h2>

<table class="table table-hover">
  <thead>
    <tr class="table-danger">
      <th scope="col">ユーザー名</th>
      <th scope="col">メール</th>
      <th scope="col">登録タスク数</th>
      <th scope="col">管理者</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
    <tbody>
      <tr>
        <td class = "user_name">
          <h5><%= user.name %></h5>
        </td>
        <td class = "email">
          <h5><%= user.email %></h5>
        </td>
        <td class = "count_task">
          <h5><%= user.tasks.count %></h5>
        </td>
        <td class = "admin">
          <h5>
            <% if user.admin %>
              ◯
            <% end %>
          </h5>
        </td>
        <td class="btn btn-outline-success">
          <%= link_to t('view.edit'),edit_admin_user_path(user.id), data: { confirm: '本当に編集していいですか？' } %>
        </td>
        <td class="btn btn-outline-danger">
          <%= link_to t('view.delete'),admin_user_path(user.id), method: :delete, id:"delete_#{user.id}", data: { confirm: '本当に削除していいですか？' } %>
        </td>
      </tr>
    </tbody> 
  <% end %>
</table>

<table>
  <tr>
    <td class="btn btn-light"><h5><%= link_to t('ユーザー作成'),new_admin_user_path %></h5></td>
  </tr>
</table>
