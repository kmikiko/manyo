<%= form_with(model: @task, local: true) do |f|%>
  <div class="field">
    <table>
      <tr>
        <td><%= f.label :name %></td>
      </tr>
      <tr>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td><%= f.label :detail %></td>
      </tr>
      <tr>
        <td><%= f.text_area :detail %></td>
      </tr>
    </table>
  </div>
  <%= f.submit "登録"%>
<% end %>
